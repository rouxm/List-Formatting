{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "children": [
    {
      "elmType": "span",
      "style": {
        "padding-right": "8px"
      },
      "txtContent": "=@currentField.title + ' ' + toUpperCase(substring(@currentField.email, 0, 1)) + toLowerCase(substring(@currentField.email, 1, indexOf(@currentField.email,'.'))) + ' ' + substring(substring(@currentField.email, indexOf(@currentField.email,'.')+1, indexOf(@currentField.email,'@')),0,1) + toLowerCase(replace(substring(@currentField.email, indexOf(@currentField.email,'.')+2, indexOf(@currentField.email,'@')),'4',''))"
    },
    {
      "elmType": "a",
      "attributes": {
        "iconName": "Mail",
        "class": "sp-field-quickActions",
        "href": {
          "operator": "+",
          "operands": [
            "mailto:",
            "=replaceAll(@currentField.email,'ecn.','')",
            "?subject=",
            "[$Title]",
            "&body=Dear ",
            "=toUpperCase(substring(@currentField.email, 0, 1))",
            "=toLowerCase(substring(@currentField.email, 1, indexOf(@currentField.email,'.')))",
            ",\r\n\r\n",
            "File: '",
            "[$Title]",
            "' is ready for your review.",
            "\r\n---",
            "\r\nhttps://yourDomain.sharepoint.com",
            "[$FileRef]"
          ]
        }
      }
    }
  ]
}
